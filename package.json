{
  "name": "web-app-boiler",
  "version": "1.0.0",
  "description": "Boilerplate for Web Applications using Angular 5, Typescript, and Webpack",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && webpack --config webpack.prod.js",
    "build:dev": "npm run clean && webpack --config webpack.dev.js",
    "clean": "rimraf dist",
    "serve": "webpack-dev-server --hot --config webpack.dev.js",
    "start": "npm run build && node server.js",
    "test": "tsc && ava **/*.spec.js"
  },
  "author": "Zachary Bowhay",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^5.0.1",
    "@angular/compiler": "^5.0.1",
    "@angular/core": "^5.0.1",
    "@angular/forms": "^5.0.1",
    "@angular/http": "^5.0.1",
    "@angular/platform-browser": "^5.0.1",
    "@angular/platform-browser-dynamic": "^5.0.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "core-js": "^2.5.1",
    "es6-shim": "^0.35.3",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "reflect-metadata": "^0.1.10",
    "request": "^2.83.0",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@types/node": "^8.0.50",
    "angular2-template-loader": "^0.6.2",
    "ava": "^0.23.0",
    "codelyzer": "^4.0.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "css-to-string-loader": "^0.1.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.19.0",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  }
}
